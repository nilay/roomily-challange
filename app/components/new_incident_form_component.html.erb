<div data-controller="new-incident-form-component" class="my-8">
  <%= form_with(model: @incident, method: :post, class: "grid grid-cols-1 gap-6 block") do |f| %>
    <%= f.label :name, class: "block" do %>
      <%= tag.span "Title", class: "text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    <% end %>

    <%= f.label :name, class: "block" do %>
      <%= tag.span "Description", class: "text-gray-700" %>
      <%= f.text_field :description, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", placeholder: "description goes here" %>
    <% end %>

    <%= f.label :name, class: "block" do %>
      <%= tag.span "Severity", class: "text-gray-700" %>
      <%=
        f.select :severity,
        ['sev0', 'sev1', 'sev2'],
        { include_blank: true },
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", placeholder: "Select Severity"
      %>
    <% end %>

    <%= f.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</div>
